<div class="modal fade" tabindex="-1" role="dialog" id="likesModal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= pluralize(likes.count, "Like")%></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%likes.each do |like|%>
          <div class="list-group-item">
            <a href="<%=user_path(like.liker)%>">
            <%= image_tag image_url(like.liker.profile), class: "img-fluid profile-picture"%>
            </a>
            <%= link_to like.liker.profile.full_name, user_path(like.liker) %>
          </div>
        <% end%>
      </div>
    </div>
  </div>
</div>