<ul class="row mx-auto" id="friends_list">
    <% friend_resource.each do |friend|%>
      <li class="col-6 list-group-item mx-2 mb-2">
      <div class="row">
        <div class="col-9">
          <% image_url = @user.profile.profile_picture? ? @user.profile.profile_picture.url : "https://www.lewesac.co.uk/wp-content/uploads/2017/12/default-avatar.jpg" %>
          <a href="<%=user_path(friend)%>"><%= image_tag image_url, class:"img-fluid profile-picture"%></a>
          <%= link_to friend.profile.full_name, friend %>
        </div>
        <div class="col-3">
            <% if current_user != friend %>
            <% if current_user.friends.include?(friend)%>
              <%= render  "users/shows/already_friends_btn", user: friend %>
            <% elsif current_user.pending_request?(friend)%>
              <%= link_to "Request sent", "#", class: "btn btn-sm request-sent float-right" %>
            <%else%>
              <%= link_to "Add friend", 
              friend_requests_path(
                friend_request: {
                  requestee_id: friend.id,
                  requester_id: current_user.id
                }), method: :post,
              class:"btn btn-sm btn-primary float-right"%>
            <%end%>
          <%end%>
        </div>
      </div>
      </li>
    <%end%>
  </ul>