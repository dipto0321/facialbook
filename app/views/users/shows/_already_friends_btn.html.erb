<div class="dropdown">
  <% btn_style = params[:controller] == 'users' ? "btn-block" : "float-right btn-sm"%>
  <a class="btn btn-silver dropdown-toggle <%= btn_style %>" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Friends
  </a>
  <div class="dropdown-menu">
    <% friendship = Friendship.find_friendship(current_user,user)%>
    <%= link_to "Unfriend", friendship_path(friendship), 
    method: :delete,
    class:"dropdown-item px-0 pl-1"
    %>
  </div>
</div>