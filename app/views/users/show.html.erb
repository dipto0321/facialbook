<h1>User's info</h1>
<hr>
<p>Email : <%= @user.email %></p>
<% if !current_user.requestees.include?(@user) && !current_user.friends.include?(@user)%>
<%= link_to  "Add Friend", friend_requests_path(friend_request: {requestee_id: @user.id, requester_id: current_user.id}), method: :post %>
<%elsif current_user.requestees.include?(@user) && current_user.pending_request?(@user) == false %>
  <%= link_to "Request Sent", "#"%>
<%end%>
<% if @user.friends.any? %>
  <h4>Friends</h4>
  <ul>
    <% @user.friends.each do |friend| %>
      <li><%= link_to  friend.email, friend %></li>
    <% end %>
  </ul>
<% end %>
