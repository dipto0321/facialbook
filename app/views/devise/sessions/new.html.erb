<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class: "") do |f| %>
  <div class="form">
    <div class="col-md-5">
      <%= f.input :email,
                  required: false,
                  label: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", placeholder: "Email" } %>
    </div>
    <div class="col-md-5">
      <%= f.input :password,
                  required: false,
                  label: false,
                  input_html: { autocomplete: "current-password", placeholder: "Password" } %>
    </div>
    <div class="col-md-5">
      <%= f.button :submit, "Log in", class: 'btn-primary btn-block'%>
    </div>
  </div>
  <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  
<% end %>

<%= render "devise/shared/links" %>
